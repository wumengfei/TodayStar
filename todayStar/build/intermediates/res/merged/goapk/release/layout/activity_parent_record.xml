<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:id="@+id/record_main"
    tools:context="com.ctbri.staroftoday.view.ParentRecordActivity" >
	<RelativeLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="1dip"
	    android:background="@color/white"
	    android:padding="10dp"
	    android:id="@+id/record_line"
	    android:orientation="horizontal"
	    >
		<TextView 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignParentLeft="true"
		    android:layout_centerVertical="true"
		    android:text="@string/record_name"
		    android:textColor="@color/word"
		    android:textSize="18sp"
	    	/>    
	    <!--<TextView 
	        android:layout_alignParentRight="true"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:paddingTop="3dp"
	        android:paddingBottom="3dp"
	        android:paddingLeft="8dp"
	        android:paddingRight="8dp"
	        android:text="@string/record_new"
	        android:textColor="@color/word"
	        android:textSize="17sp"
	        android:clickable="true"
	        android:background="@color/blue"
	        android:id="@+id/record_new"	        
	        />-->
	        <ImageView 
	        android:layout_alignParentRight="true"
	        android:layout_width="120dp"
	        android:layout_height="50dp"
	        android:layout_centerVertical="true"
	        android:paddingTop="3dp"
	        android:paddingBottom="3dp"
	        android:paddingLeft="8dp"
	        android:paddingRight="8dp"
	        android:src="@drawable/parent_record"
	        android:clickable="true"
	        android:id="@+id/record_new"	        
	        />
    </RelativeLayout>
	<com.handmark.pulltorefresh.library.PullToRefreshListView
	    android:layout_below="@id/record_line"
        android:id="@+id/ptrlv_record"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:cacheColorHint="#00000000"
        android:divider="#19000000"
        android:dividerHeight="1dip"
        android:fadingEdge="none"
        android:fastScrollEnabled="false"
        android:footerDividersEnabled="false"
        android:headerDividersEnabled="false"
        android:smoothScrollbar="true" 
        />
</RelativeLayout>
