<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="20dp"
    android:paddingBottom="15dp" >
    <ImageView 
        android:id="@+id/headphoto"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="2dp"
        android:contentDescription="@string/app_name"
        />
    <TextView
        android:id="@+id/tv_list_item_frontpage_name"
        android:layout_toRightOf="@id/headphoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:textSize="17sp"
        android:textColor="#5d5d5d"
        android:textStyle="bold" />
    <com.ctbri.staroftoday.view.NoScrollGridView
        android:id="@+id/gridview1"
        android:layout_below="@id/tv_list_item_frontpage_name"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_centerInParent="true"
        android:numColumns="3"
        android:stretchMode="columnWidth"
        android:verticalSpacing="3dp" />    
    <LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_below="@id/gridview1"
	    android:orientation="horizontal"
	    android:layout_marginTop="18dp"
	    android:layout_height="wrap_content"
	     >
        <TextView
	        android:id="@+id/tv_list_item_frontpage_disagree"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="17sp"
	        android:layout_marginLeft="250dp"
			android:clickable="true"
	        android:text="@string/disagree"
	        android:textColor="#5d5d5d"/>
        <TextView
	        android:id="@+id/tv_list_item_frontpage_agree"
	        android:layout_marginLeft="20dp"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:clickable="true"
	        android:text="@string/agree"
	        android:textSize="17sp"
	        android:textColor="#5d5d5d"/>
    </LinearLayout>
</RelativeLayout>